@model IoTSolution.Models.DispositivosModel

@{
    ViewData["Title"] = "Editar Dispositivo";
    var usuariosList = ViewBag.Usuarios as List<SelectListItem>;
}

<h1>Editar Dispositivo</h1>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(model => model.IdDispositivo)
    <div class="form-group col-md-4">
        <label for="IdUsuario">Usuário</label>
        <select asp-for="IdUsuario" class="form-control" asp-items="usuariosList">
            <option value="">Selecione um usuário</option>
        </select>
    </div>

    <div class="form-group col-md-4">
        <label for="Descricao">Descrição</label>
        <input type="text" class="form-control" id="Descricao" name="Descricao" value="@Model.Descricao" required />
    </div>

    <div class="form-group col-md-2">
        <label for="DataHoraCadastro">Data e Hora de Cadastro</label>
        <input disabled type="datetime-local" class="form-control" id="DataHoraCadastro" name="DataHoraCadastro" value="@Model.DataHoraCadastro.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </div>
</form>
