@model IoTSolution.Models.DispositivosModel

@{
    ViewData["Title"] = "Criar Dispositivo";
}

<h1>Criar Dispositivo</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="IdUsuario">Usuário</label>
        <input type="number" class="form-control" id="IdUsuario" name="IdUsuario" value="@Model.IdUsuario" required />
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" class="form-control" id="Descricao" name="Descricao" value="@Model.Descricao" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Criar</button>
    </div>
</form>
