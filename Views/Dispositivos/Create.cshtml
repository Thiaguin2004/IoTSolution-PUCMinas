@model IoTSolution.Models.DispositivosModel

@{
    ViewData["Title"] = "Criar Dispositivo";
    var usuariosList = ViewBag.Usuarios as List<SelectListItem>;
}

<h1>Criar Dispositivo</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="IdUsuario">Usuário</label>
        <select asp-for="IdUsuario" class="form-control" asp-items="usuariosList">
            <option value="">Selecione um usuário</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" class="form-control" id="Descricao" name="Descricao" value="@Model.Descricao" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Criar</button>
    </div>
</form>
