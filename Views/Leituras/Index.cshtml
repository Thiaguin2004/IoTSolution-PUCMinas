@model List<IoTSolution.Models.LeiturasModel>

@{
    ViewData["Title"] = "Leituras";
}

<h1>Dispositivos</h1>

<form method="get" action="@Url.Action("Index", "Leituras")">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <label for="dispositivo">ID Dispositivo</label>
                <input type="number" id="dispositivo" name="dispositivo" class="form-control" value="@Context.Request.Query["dispositivo"]" />
            </div>
            <div class="col-md-2">
                <label for="sensor">ID Sensor</label>
                <input type="number" id="sensor" name="sensor" class="form-control" value="@Context.Request.Query["sensor"]" />
            </div>
            <div class="col-md-2">
                <label for="dataInicial">Data Inicial</label>
                <input type="date" id="dataInicial" name="dataInicial" class="form-control" value="@Context.Request.Query["dataInicial"]" />
            </div>
            <div class="col-md-2">
                <label for="dataFinal">Data Final</label>
                <input type="date" id="dataFinal" name="dataFinal" class="form-control" value="@Context.Request.Query["dataFinal"]" />
            </div>
            <div class="col-md-2">
                <label for="temperatura">Temperatura</label>
                <input type="text" step="0,1" id="temperatura" name="temperatura" class="form-control" value="@Context.Request.Query["temperatura"]" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary mt-4">Filtrar</button>
            </div>
        </div>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID Leitura</th>
                <th>ID Sensor</th>
                <th>ID Dispositivo</th>
                <th>Temperatura</th>
                <th>Data e Hora da Leitura</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dispositivo in Model)
            {
                <tr>
                    <td>@dispositivo.IdLeitura</td>
                    <td>@dispositivo.IdSensor</td>
                    <td>@dispositivo.IdDispositivo</td>
                    <td>@dispositivo.Temperatura °C</td>
                    <td>@dispositivo.DataHoraLeitura</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum dispositivo encontrado.</p>
}
