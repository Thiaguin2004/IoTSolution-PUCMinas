@model IoTSolution.Models.UsuariosModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<h1>Editar Usuário</h1>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(model => model.IdUsuario)
    <div class="form-group">
        <label for="Usuario">Usuário</label>
        <input type="text" class="form-control" id="Usuario" name="Usuario" value="@Model.Usuario" required />
    </div>

    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="text" class="form-control" id="Senha" name="Senha" value="@Model.Senha" required />
    </div>

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" />
    </div>

    <div class="form-group">
        <label for="Sobrenome">Sobrenome</label>
        <input type="text" class="form-control" id="Sobrenome" name="Sobrenome" value="@Model.Sobrenome" />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
    </div>

    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" class="form-control" id="Telefone" name="Telefone" value="@Model.Telefone" required />
    </div>

    <div class="form-group">
        <label for="CPF">CPF</label>
        <input type="text" class="form-control" id="CPF" name="CPF" value="@Model.CPF" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </div>
</form>
